<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.MyOfflineMap" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primaryVariant_dark</item>
        <item name="colorOnPrimary">@color/onPrimary_dark</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant_dark</item>
        <item name="colorOnSecondary">@color/onSecondary_dark</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Background color -->
        <item name="android:background">@color/background_dark</item> <!-- Dark theme background color -->

        <!-- Map background color -->
        <item name="map_background_color">@color/map_background_color_dark</item> <!-- Map background color for dark theme -->
    </style>
</resources>
